[MASTER]
ignore=venv

[TYPECHECK]
ignored-modules=torch.utils.data
generated-members=torch.*
extension-pkg-allow-list=math

[BASIC]
good-names=x,y,z,i,j,tp,fp,tn,fn,to

[FORMAT]
max-line-length=120

[SIMILARITIES]
min-similarity-lines=8
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no

[DESIGN]
max-attributes=10
max-args=8

[MESSAGES CONTROL]
disable=
    fixme,
    bad-continuation,
    bad-whitespace,
    useless-super-delegation,
    duplicate-code

[REPORTS]
reports=yes
